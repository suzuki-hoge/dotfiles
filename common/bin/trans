#!/usr/bin/python

import os
import os.path
import argparse

parser = argparse.ArgumentParser(description = 'look up a word in a dictionary.app')
parser.add_argument('word', metavar = 'word', type = str, nargs = 1, help = 'word')
args = parser.parse_args()

Translate = os.path.join(os.path.dirname(__file__), '..', 'translate', 'translate', 'Translate')

os.system('%s %s' % (Translate, args.word[0]))
