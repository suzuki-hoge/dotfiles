#!/usr/bin/python

import os
import argparse

parser = argparse.ArgumentParser(description = "open web page", add_help = False)

page_group = parser.add_mutually_exclusive_group()
page_group.add_argument('--work', default = False, action = 'store_true', help = 'check is work (default : False)')
page_group.add_argument('--home', default = False, action = 'store_true', help = 'check is home (default : False)')

args = parser.parse_args()

name = os.uname()[1]

if args.work:
	if 'work' in name:
		print 1
	else:
		print 0
else:
	if 'home' in name:
		print 1
	else:
		print 0
