" vim:set ft=vim:

function! KeyMapping()
	nnoremap <buffer> d  :call ActionDispatch('dump')<CR>
	nnoremap <buffer> D  :call ActionDispatch('Dump')<CR>

	nnoremap <buffer> R  :call ActionDispatch('Reload')<CR>

	nnoremap <buffer> p  :call ActionDispatch('PointOn')<CR>
	nnoremap <buffer> P  :call ActionDispatch('PointOff')<CR>

	nnoremap <buffer> h  :call ActionDispatch('MoveUp')<CR>
	nnoremap <buffer> l  :call ActionDispatch('MovePrev')<CR>
	nnoremap <buffer> cd :call ActionDispatch('ChangeDir')<CR>

	nnoremap <buffer> fh :call ActionDispatch('FoldOn')<CR>
	nnoremap <buffer> fl :call ActionDispatch('FoldOff')<CR>
	nnoremap <buffer> fH :call ActionDispatch('RecFoldOn')<CR>
	nnoremap <buffer> fL :call ActionDispatch('RecFoldOff')<CR>
	nnoremap <buffer> FH :call ActionDispatch('AllFoldOn')<CR>
	nnoremap <buffer> FL :call ActionDispatch('AllFoldOff')<CR>

	nnoremap <buffer> e  :call ActionDispatch('edit')<CR>
	nnoremap <buffer> E  :call ActionDispatch('Edit')<CR>

	nnoremap <buffer> o  :call ActionDispatch('Open')<CR>
	nnoremap <buffer> a  :call ActionDispatch('App')<CR>
	nnoremap <buffer> q  :call ActionDispatch('Quick')<CR>

	nnoremap <buffer> <C-Space> :call ActionDispatch('CloseAll')<CR>
endfunction
