source $frank/src/Entry/fundamental/Num
source $frank/src/Entry/fundamental/Path
source $frank/src/Entry/fundamental/Name
source $frank/src/Entry/fundamental/Depth
source $frank/src/Entry/fundamental/Point
source $frank/src/Entry/fundamental/Fold

python <<EOM

from abc import ABCMeta, abstractmethod

class Entry:

	__metaclass__ = ABCMeta

	def __init__(self, root, path):
		self.num = Num()
		self.path = path
		self.name = Name(path)
		self.depth = Depth(root, path)
		self.point = Point()
		self.fold = Fold()

	def createOutput(self):
		p = self.point.value if self.point.isOn() else '  '
		return '%2s : %s%s%s' % (p, self.depth.getPartOfOutput(), self.name.getPartOfOutput(), self.path.getEndSlash())
#		return '%s%s%s%s' % (self.point.getPartOfOutput(), self.depth.getPartOfOutput(), self.name.getPartOfOutput(), self.path.getEndSlash())

	@abstractmethod
	def getOutputs(self, result):
		pass

	@abstractmethod
	def pointOn(self, target):
		pass

	@abstractmethod
	def pointOff(self, target):
		pass

EOM
