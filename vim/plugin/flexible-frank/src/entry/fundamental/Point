" vim:set ft=vim:

python <<EOM

class Point():

	@staticmethod
	def init():
		Point.value = 1

	@staticmethod
	def next():
		Point.value = Point.value + 1

	def __init__(self):
		self.value = False

	def on(self):
		self.value = Point.value
		Point.next()

	def off(self):
		self.value = False

	def isOn(self):
		return self.value

	def getPartOfOutput(self):
		return '*' if self.isOn() else ''

EOM
