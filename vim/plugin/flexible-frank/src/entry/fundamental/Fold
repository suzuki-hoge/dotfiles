" vim:set ft=vim:

python <<EOM

class Fold():

	def __init__(self):
		self.value = False

	def on(self):
		self.value = True

	def off(self):
		self.value = False

	def isOn(self):
		return self.value

	def getPartOfOutput(self, path):
		return ' ' if not path.isDir() else '>' if self.isOn() else 'v'

EOM
