class TargetInvalidException(Exception):

	def __init__(self, target):
		self.target = target

	def __str__(self):
		return 'this command is invalid at [target : %s]' % self.target

def directory(e):
	assert not e.type.isDir() , TargetInvalidException('directory')

def file(e):
	assert not e.type.isFile(), TargetInvalidException('file')

EOM
