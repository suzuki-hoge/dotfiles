python <<EOM

import vim
import os
import os.path

class Frank:

	def __init__(self, root):
		Num.init()
		root = Path(root)
		self.node = Directory(root, root)
		self.buffer = Buffer2()

	def output(self):
		self.buffer.output(self.node.getOutputs([]))

	def pointOn(self):
		self.node.pointSwitch(Cursor.getCurrentLineNum(), True)

	def pointOff(self):
		self.node.pointSwitch(Cursor.getCurrentLineNum(), False)

EOM
