" vim:set ft=vim:

source $frank/Entry/fundamental/Num
source $frank/Entry/fundamental/Path
source $frank/Entry/fundamental/Name
source $frank/Entry/fundamental/Depth
source $frank/Entry/fundamental/Point

python <<EOM

from abc import ABCMeta, abstractmethod

class Entry:

	__metaclass__ = ABCMeta

	def __init__(self, root, path):
		self.num = Num()
		self.path = path
		self.name = Name(path)
		self.depth = Depth(root, path)
		self.point = Point()

	def createOutput(self):
		return '%s%s%s%s' % (self.point.getPartOfOutput(), self.depth.getPartOfOutput(), self.name.getPartOfOutput(), self.path.getEndSlash())

	@abstractmethod
	def getOutputs(self, result):
		pass

	@abstractmethod
	def pointSwitch(self, target):
		pass

EOM
