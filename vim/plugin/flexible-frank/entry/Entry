source $frank/Entry/fundamental/Path
source $frank/Entry/fundamental/Name
source $frank/Entry/fundamental/Depth

python <<EOM

from abc import ABCMeta, abstractmethod

class Entry:

	__metaclass__ = ABCMeta
	Num = 1

	@staticmethod
	def initNum():
		Entry.Num = 1

	@staticmethod
	def nextNum():
		Entry.Num = Entry.Num + 1

	def __init__(self, root, path):
		self.num = Entry.Num
		Entry.nextNum()

		self.path = path
		self.name = Name(path)
		self.depth = Depth(root, path)

		self.pointed = False

	def _isPointed(self):
		return self.pointed

	def _isFolded(self):
		return True

	def _getPointMark(self):
		return '*' if self._isPointed() else ''

	def createOutput(self):
		return '%s%s%s%s' % (self._getPointMark(), self.depth.getPartOfOutput(), self.name.getPartOfOutput(), self.path.getEndSlash())

	@abstractmethod
	def getOutputs(self, result):
		pass

	@abstractmethod
	def pointSwitch(self, num):
		pass

EOM
