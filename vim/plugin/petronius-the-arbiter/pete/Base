python <<EOM

from abc import ABCMeta, abstractmethod

class Base:

	__metaclass__ = ABCMeta

	def __init__(self):
		self.buffer = Buffer()

	def commentOn(self, firstLine, lastLine):
		self.buffer.commentOn(firstLine, lastLine, self.getCommentHeadString(), self.getCommentTailString())

	def commentOff(self, firstLine, lastLine):
		self.buffer.commentOff(firstLine, lastLine, self.getCommentHeadString(), self.getCommentTailString())

	def commentSwitch(self, firstLine, lastLine):
		self.buffer.commentSwitch(firstLine, lastLine, self.getCommentHeadString(), self.getCommentTailString())

	@abstractmethod
	def getCommentHeadString(self):
		pass

	@abstractmethod
	def getCommentTailString(self):
		pass

EOM
