" vim:set ft=vim:

" move
nnoremap <S-k> 10<UP>
nnoremap <S-j> 10<DOWN>
nnoremap <S-h> 10<LEFT>
nnoremap <S-l> 10<RIGHT>

" redo
nnoremap <S-u> <C-r>

" Scrolling relative to cursor 
nnoremap ,, zz
nnoremap ,j zt
nnoremap ,k zb

" highlight under cursor word
nnoremap * :let @/ = '\<' . expand('<cword>') . '\>'<CR>:set hlsearch<CR>
nnoremap g* :let @/ = expand('<cword>')<CR>:set hlsearch<CR>

" colon with !
nnoremap æ :!

" history search
nnoremap <C-p> :<UP>
nnoremap <S-C-p> :!<UP>

" highlight off
nnoremap <silent><ESC><ESC> :noh<CR>

" reload vimrc
nnoremap ® :source $rc<CR>

" word yank
nnoremap yy yiw

" word paste
nnoremap yp :call WordPaste()<CR>

function! WordPaste()
	" delete word
	execute 'normal! diw'

	" check cursor position
	if col('.') == len(getline('.'))
		" at end of line, paste with p
		execute 'normal! "0p'
	else
		" else, paste with P
		execute 'normal! "0P'
	endif
endfunction
