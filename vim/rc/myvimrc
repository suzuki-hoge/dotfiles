" vim:set ft=vim:

" dotfiles
let $dot = $HOME . '/.dotfiles'

" vim rc files
let $rc   = $dot . '/vim/rc/myvimrc'
let $myrc = $dot . '/vim/rc/sub'

" plugin
let $plugin = $dot . '/vim/plugin'
let $pete   = $dot . '/vim/plugin/petronius-the-arbiter'

" tmp
let $tmp = $HOME . '/Documents/tmp'

" KeyRemap4MacBook - private.xml
let $private = $HOME . '/Library/Application Support/KeyRemap4MacBook/private.xml'

" todo
let $todo = $HOME . '/Dropbox/todo.txt'

" import myrc
source $myrc/autocommands
source $myrc/commands
source $myrc/map-c
source $myrc/map-i
source $myrc/map-n
source $myrc/map-v
source $myrc/mark
source $myrc/plugin
source $myrc/options
source $myrc/tab
