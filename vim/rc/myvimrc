" vim:set ft=vim:

" dotfiles
let $dot = $HOME . '/.dotfiles'

" vim rc files
let $rc    = $dot . '/vim/rc/myvimrc'
let $subrc = $dot . '/vim/rc/sub'

" plugin
let $plugin      = $dot . '/vim/plugin'
let $pete        = $plugin . '/petronius-the-arbiter'
let $frank       = $plugin . '/flexible-frank'
let $surroundtag = $plugin . '/surround-tag'
let $mycomplete  = $plugin . '/my-complete'
let $todoplg     = $plugin . '/todo'
let $tmpplg      = $plugin . '/tmp-buffer'

let $frank2     = $plugin . '/frank2'

" tmp
let $tmp = $HOME . '/Documents/tmp'

" workspace
let $workspace = $HOME . '/Documents/workspace'

" KeyRemap4MacBook - private.xml
let $private = $HOME . '/Library/Application Support/KeyRemap4MacBook/private.xml'

" todo
let $todo = $HOME . '/Dropbox/list.todo'

" import subrc
source $subrc/autocommands
source $subrc/commands
source $subrc/map-c
source $subrc/map-i
source $subrc/map-n
source $subrc/map-v
source $subrc/mark
source $subrc/plugin
source $subrc/options
source $subrc/tab
source $subrc/tagbar
source $subrc/vundle
