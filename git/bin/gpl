#!/usr/bin/python

import os
import sys
import os.path
import argparse

sys.path.append(os.path.abspath('%s/../../' % os.path.abspath(__file__)))
import util

parser = argparse.ArgumentParser(description = 'git pull origin "branch"')
parser.add_argument('branch', action = 'store', nargs = '?', default = None, help = 'branch name (default : current branch)')
args = parser.parse_args()

branch = util.getCurrentBranch() if args.branch is None else args.branch
os.system('git pull origin "%s"' % branch)
