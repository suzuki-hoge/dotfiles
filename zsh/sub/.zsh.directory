# ディレクトリ名のみで移動
setopt auto_cd

# push
setopt AUTO_PUSHD

# 重複させない
setopt PUSHD_IGNORE_DUPS

# ディレクトリを作り、そこに移動する
function take(){
 mkdir -p "$1"
 cd "$1"
}

# percol
 # 関数
 function percol_select_dirstack_entry() {
  BUFFER=$(dirs -pl | percol --match-method regex --query "$LBUFFER")
  CURSOR=$#BUFFER
  zle clear-screen
 }
 zle -N percol_select_dirstack_entry

 # 呼び出し
 bindkey '^J' percol_select_dirstack_entry
