# vim:set ft=sh:

# 引数もしくは作業ディレクトリ
function _lib_currentOr() {
 if [ -z $1 ];then
  echo .
 else
  echo $1
 fi
}

# 出力整形
function _lib_cutlen() {
 echo `expr $#1 + 2`
}

# find（ファイルのみ）
function _lib_ffind() {
 echo `_lib_find $1 f`
}

# find（ディレクトリのみ）
function _lib_dfind() {
 echo `_lib_find $1 d`
}

# finder
function _lib_find() {
 local ROOT=$1
 local LEN=`_lib_cutlen $ROOT`
 local TYPE=$2
 echo `find $ROOT -type $TYPE -maxdepth 1 | cut -c$LEN- | percol --match-method regex`
}

# find（再帰、ファイルのみ）
function _lib_recffind() {
 echo `_lib_recfind $1 f`
}

# find（再帰、ファイルのみ）
function _lib_recdfind() {
 echo `_lib_recfind $1 d`
}

# finder（再帰）
function _lib_recfind() {
 local ROOT=$1
 local LEN=`_lib_cutlen $ROOT`
 local TYPE=$2

 echo `find $ROOT -name .git -prune -or -name .svn -prune -or -name .vagrant -or -name .DS_Store -prune -or -name .pyc -prune -or -name Library -prune -or -type $TYPE -or -print | cut -c$LEN- | percol --match-method regex`
}
