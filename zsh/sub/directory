# vim:set ft=sh:

# ディレクトリ名のみで移動
setopt auto_cd

# 移動するたびにディレクトリスタックに積む
setopt AUTO_PUSHD

# ディレクトリスタックを重複させない
setopt PUSHD_IGNORE_DUPS

# ディレクトリスタック一覧からディレクトリを選択して移動する
function percol_select_dirstack_entry() {
 BUFFER=`dirs -pl | percol --match-method regex --query "$LBUFFER"`
 CURSOR=$#BUFFER
 zle clear-screen
}
zle -N percol_select_dirstack_entry
bindkey '^J' percol_select_dirstack_entry

# ディレクトリの作成と移動
function take() {
 mkdir -p $1
 cd $1
}

# ディレクトリ一覧からディレクトリを選択して移動する
function cdp() {
 if [ -z $1 ];then
  local ROOT=.
 else
  local ROOT=$1
 fi
 local LEN=`expr $#ROOT + 2`
 local DIR=`find $ROOT -type d -maxdepth 1 | cut -c$LEN- | percol --match-method regex`
 cd $ROOT/$DIR
}

# ディレクトリ一覧（再帰）からディレクトリを選択して移動する
function cdpr() {
 if [ -z $1 ];then
  local ROOT=.
 else
  local ROOT=$1
 fi
 local LEN=`expr $#ROOT + 2`
 local DIR=`find $ROOT -name .git -prune -or -name .svn -prune -or -name .vagrant -prune -or -name Library -prune -or -type d | cut -c$LEN- | percol --match-method regex`
 cd $ROOT/$DIR
}
