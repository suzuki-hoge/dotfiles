# vim:set ft=sh:

# ディレクトリ名のみで移動を可能にする
setopt auto_cd

# ディレクトリを作成してそこに移動する
function take() {
 mkdir -p $1
 cd $1
}

# 現在のディレクトリもしくは指定のディレクトリをFinderで開く
function dir() {
 local TARGET=`_lib_currentOr $1`
 open $TARGET
}

# [percol] Finderで開く
function dirp() {
 local ROOT=`_lib_currentOr $1`
 local TARGET=`_lib_dfind $ROOT`
 open $ROOT/$TARGET
}

# [rec-percol] Finderで開く
function dirpr() {
 local ROOT=`_lib_currentOr $1`
 local DEPTH=`_lib_maxOr $2`
 local TARGET=`_lib_recdfind $ROOT $DEPTH`
 open $ROOT/$TARGET
}

# [percol] 移動
function cdp() {
 local ROOT=`_lib_currentOr $1`
 local TARGET=`_lib_dfind $ROOT`
 cd $ROOT/$TARGET
}

# [rec-percol] 移動
function cdpr() {
 local ROOT=`_lib_currentOr $1`
 local DEPTH=`_lib_maxOr $2`
 local TARGET=`_lib_recdfind $ROOT $DEPTH`
 cd $ROOT/$TARGET
}

# [percol] リストから移動
function dirs() {
 cd `cat ~/.dotfiles/zsh/directories | percol --match-method regex`
}

# [percol-chain] 連続移動
function cdpc() {
 cdp
 cdpc
}
